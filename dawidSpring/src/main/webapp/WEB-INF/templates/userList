<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Contacts</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>


<div th:if="${not #lists.isEmpty(users)}">
	<div th:each="user: ${users}">
		<h3 th:text="${user.firstName + ' ' + user.secondName}"/>
		<h4 th:text="${user.table.title}" />
		<h5 th:text="${user.table.backlog.title}" />
		<table th:if="${not #lists.isEmpty(user.table.backlog.tasks)}" border="1">
			 <tr>
        		<th>name</th>
        		<th>description</th>
    		</tr>	
			<tr th:each="task : ${#lists.sort(user.table.backlog.tasks)}">
				<td>
					<span th:text="${task.name}" />
					<span th:each="label: ${#lists.sort(task.labels)}" th:text="${label.description}" 
						th:style="'color:'+${label.colour}" />
				</td>
				<td th:text="${task.desc}"/>
			</tr>
		</table>
	</div>
</div>
	

</body>
</html>