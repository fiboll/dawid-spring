<div th:fragment="column(col)">
	<h5 th:text="${col.title}" />
	<table th:if="${not #lists.isEmpty(col.tasks)}" border="1">
	     <tr>
	        <th>name</th>
	        <th>description</th>
	    </tr>
	    <tr th:each="task : ${#lists.sort(col.tasks)}">
	        <td>
	            <span th:text="${task.name}" />
	            <span th:each="label: ${#lists.sort(task.labels)}" th:text="${label.description}"
	                th:style="'color:'+${label.colour}" />
	        </td>
	        <td th:text="${task.desc}"/>
	    </tr>
	</table>
</div>
